# Environment variables for development and testing
# Copy this file to .env and customize for your environment

# Application
APP_NAME=Deriv Anomaly Copilot
ENVIRONMENT=development
DEBUG=true

# ML/LLM Configuration
# Local model directory path OR Hugging Face model ID (required for backend inference)
MODEL_PATH=path/to/local/mistral-or-hf-model-id
DEVICE=cuda
DTYPE=bfloat16
MAX_TOKENS=512

# LoRA Configuration
USE_LORA=false
LORA_PATH=llm/models/lora
LORA_RANK=8
LORA_ALPHA=16
LORA_DROPOUT=0.05

# Anomaly Detection
ANOMALY_THRESHOLD=0.7
LOOKBACK_WINDOW=300

# Logging
LOG_LEVEL=INFO
